<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Employee Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f4f4f4, #e9e9e9);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: #4a90e2;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            font-size: 24px;
            font-weight: bold;
            width: 100%; /* Ensure full width */
        }

        .user-profile {
            display: flex;
            align-items: center;
        }

            .user-profile img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 10px;
            }

            .user-profile span {
                font-size: 18px;
            }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: auto;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 1;
            padding: 10px;
        }

        .sidebar {
            width: 250px;
            background-color: #f4f4f4;
            border-right: 1px solid #ddd;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            overflow-y: auto;
            transition: width 0.3s;
        }

            .sidebar.collapsed {
                width: 60px;
            }

                .sidebar.collapsed ul li a span {
                    display: none;
                }

        .sidebar-toggle {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #4a90e2;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 1000;
        }

        .sidebar h2 {
            margin-top: 0;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                margin-bottom: 10px;
            }

                .sidebar ul li a {
                    text-decoration: none;
                    color: #333;
                    font-size: 16px;
                    display: flex;
                    align-items: center;
                    padding: 10px;
                    border-radius: 5px;
                }

                    .sidebar ul li a:hover {
                        background-color: #e9e9e9;
                    }

                    .sidebar ul li a span {
                        margin-left: 10px;
                    }

        .content {
            margin-left: 270px;
            padding: 20px;
            width: calc(100% - 270px);
            transition: margin-left 0.3s;
        }

            .content.collapsed {
                margin-left: 80px;
            }

        .login-container, .signup-container, .forgot-password-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
    </style>
</head>
<body>
    @if (ViewContext.RouteData.Values["controller"].ToString() != "Login" &&
          ViewContext.RouteData.Values["action"].ToString() != "ForgotPassword")
    {
        <div class="sidebar" id="sidebar">
            <button class="sidebar-toggle" onclick="toggleSidebar()">☰</button>
            <h2>Menu</h2>
            <ul>
                <li><a href="@Url.Action("Index", "Employee")"><i class="fas fa-list"></i><span>Employee List</span></a></li>
                <li><a href="@Url.Action("AddEmployee", "Employee")"><i class="fas fa-plus"></i><span>Add Employee</span></a></li>
                <li><a href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a></li>
            </ul>
        </div>
    }
    <header>
        Employee Management System
        @if (Session["UserName"] != null)
        {
            <div class="user-profile">
                <img src="~/Content/Images/31jPSK41kEL.jpg" alt="User Profile">
                <span>@Session["UserName"]</span>
            </div>
        }
    </header>
    <div class="content" id="content">
        @if (ViewContext.RouteData.Values["controller"].ToString() == "Login" ||
            ViewContext.RouteData.Values["action"].ToString() == "ForgotPassword")
        {
            <div class="@ViewContext.RouteData.Values["action"].ToString().ToLower()-container">
                @RenderBody()
            </div>
        }
        else
        {
            @RenderBody()
        }
    </div>
    <footer>
        &copy; 2024 Employee Management System. All rights reserved.
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            var content = document.getElementById('content');
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('collapsed');
        }
    </script>
</body>
</html>
