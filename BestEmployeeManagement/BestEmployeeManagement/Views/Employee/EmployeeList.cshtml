@model IEnumerable<BestEmployeeManagement.Models.EmployeeModel>
@{
    ViewBag.Title = "Employee List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row mb-2 align-items-center">
        <div class="col-md-6">
            <h2 class="page-title">Employee List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("AddEmployee", "Employee")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Employee
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Date of Birth</th>
                            <th>Gender</th>
                            <th>Phone Number</th>
                            <th>Address</th>
                            <th>Position</th>
                            <th>Department</th>
                            <th>Joining Date</th>
                            <th>Salary</th>
                            <th>Employee Type</th>
                            <th>Branch</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.FirstName</td>
                                <td>@employee.LastName</td>
                                <td>@employee.Email</td>
                                <td>@employee.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                <td>@employee.Gender</td>
                                <td>@employee.PhoneNumber</td>
                                <td>@employee.Address</td>
                                <td>@employee.PositionName</td>
                                <td>@employee.DepartmentName</td>
                                <td>@employee.JoiningDate.ToString("yyyy-MM-dd")</td>
                                <td>@employee.Salary</td>
                                <td>@employee.TypeName</td>
                                <td>@employee.BranchName</td>
                                <td>
                                    <div class="d-flex">
                                        <a href="@Url.Action("EditEmployee", "Employee", new { id = employee.EmployeeId })" class="btn btn-sm btn-outline-primary me-2">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("DeleteEmployee", "Employee", new { id = employee.EmployeeId })" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .page-title {
            color: #333;
            font-weight: 600;
        }

        .table-responsive {
            max-height: 600px;
            overflow-y: auto;
        }

        .table thead {
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .btn-outline-primary {
            border-color: #4a90e2;
            color: #4a90e2;
        }

        .btn-outline-danger {
            border-color: #dc3545;
            color: #dc3545;
        }

            .btn-outline-primary:hover,
            .btn-outline-danger:hover {
                color: white;
            }

        .table th, .table td {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .table th {
            padding: 10px;
        }

        .table td {
            padding: 10px;
        }
    </style>
}

@section Scripts {
    <script>
        // Optional: Add any client-side interactions or confirmations for delete action
        $(document).ready(function () {
            $('.btn-outline-danger').on('click', function (e) {
                if (!confirm('Are you sure you want to delete this employee?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
