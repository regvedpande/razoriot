@model BestEmployeeManagement.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <h3>Forgot Password</h3>
    <form action="@Url.Action("ForgotPassword", "Login")" method="post" id="forgotPasswordForm">
        <div class="form-group">
            <label for="Username">Username</label>
            @Html.TextBoxFor(model => model.Username, new { @placeholder = "Email or Phone", required = "required", @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="NewPassword">New Password</label>
            @Html.PasswordFor(model => model.NewPassword, new { @placeholder = "Enter new password", required = "required", @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="ConfirmPassword">Confirm Password</label>
            @Html.PasswordFor(model => model.ConfirmPassword, new { @placeholder = "Confirm new password", required = "required", @class = "form-control" })
        </div>
        <button type="submit" class="btn">Submit</button>
    </form>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }
</div>

@section Styles {
    <style>
        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f4f4f4, #e9e9e9);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: #4a90e2;
            color: white;
            text-align: center;
            padding: 10px 0;
            font-size: 24px;
            font-weight: bold;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: auto;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 1;
            padding: 20px;
        }

        .box {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 100%;
            max-width: 400px;
            margin: 10px;
        }

        h3 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
            font-size: 24px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: 600;
            font-size: 14px;
            color: #555;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            color: #333;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 5px rgba(74, 144, 226, 0.5);
            }

        button.btn {
            width: 100%;
            padding: 12px;
            background-color: #4a90e2;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button.btn:hover {
                background-color: #357ab7;
            }

        .social-links {
            text-align: center;
            margin-top: 15px;
        }

            .social-links a {
                text-decoration: none;
                color: #4a90e2;
                margin: 0 10px;
                font-size: 14px;
            }

                .social-links a:hover {
                    text-decoration: underline;
                }

        .alert-info {
            background-color: #e9f5ff;
            border: 1px solid #b3d8f5;
            padding: 15px;
            margin-top: 20px;
            color: #0066cc;
            border-radius: 5px;
        }

        .text-danger {
            color: #d9534f;
        }
    </style>
}
