@model BestEmployeeManagement.Models.RegisterUserModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <h3>Login</h3>
    <form action="@Url.Action("Login", "Login")" method="post" id="loginForm">
        <div class="form-group">
            <label for="Username">Username:</label>
            @Html.TextBoxFor(model => model.Username, new { @placeholder = "Enter your username", required = "required", @class = "form-control", @aria_label = "Username" })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="Password">Password:</label>
            @Html.PasswordFor(model => model.Password, new { @placeholder = "Enter your password", required = "required", @class = "form-control", @aria_label = "Password" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn">Login</button>
        <div class="social-links">
            <a href="@Url.Action("Register", "Login")">Sign Up</a>
            <a href="@Url.Action("ForgotPassword", "Login")">Forgot Password?</a>
        </div>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">@TempData["Message"]</div>
        }
    </form>
</div>
@section Styles {
    <style>
        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f4f4f4, #e9e9e9);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: #4a90e2;
            color: white;
            text-align: center;
            padding: 10px 0;
            font-size: 24px;
            font-weight: bold;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: auto;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 1;
            padding: 20px;
        }

        .box {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 100%;
            max-width: 400px;
            margin: 10px;
        }

        h3 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
            font-size: 24px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: 600;
            font-size: 14px;
            color: #555;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            color: #333;
        }

            .form-control:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 5px rgba(74, 144, 226, 0.5);
            }

        button.btn {
            width: 100%;
            padding: 12px;
            background-color: #4a90e2;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button.btn:hover {
                background-color: #357ab7;
            }

        .social-links {
            text-align: center;
            margin-top: 15px;
        }

            .social-links a {
                text-decoration: none;
                color: #4a90e2;
                margin: 0 10px;
                font-size: 14px;
            }

                .social-links a:hover {
                    text-decoration: underline;
                }

        .alert-info {
            background-color: #e9f5ff;
            border: 1px solid #b3d8f5;
            padding: 15px;
            margin-top: 20px;
            color: #0066cc;
            border-radius: 5px;
        }

        .text-danger {
            color: #d9534f;
        }
    </style>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#loginForm').submit(function (e) {
                e.preventDefault();
                var $loginButton = $('#loginButton');
                $loginButton.prop('disabled', true).text('Logging in...');
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Login", "Login")",
                    data: $('#loginForm').serialize(),
                    dataType: 'json',
                    success: function (response) {
                        if (response.Status) {
                            window.location.href = response.RedirectUrl;
                        } else {
                            $('.text-danger').text(response.Message);
                        }
                    },
                    error: function (error) {
                        console.error(error);
                        alert('An error occurred. Please try again.');
                    },
                    complete: function () {
                        $loginButton.prop('disabled', false).text('Login');
                    }
                });
            });
        });
    </script>
}
